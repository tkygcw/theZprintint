<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/tranparent_white" />

            <stroke
                android:width="2dp"
                android:color="#ffffff" />

            <corners android:radius="5dp"/>

        </shape>
    </item>

<item>
    <shape>

        <corners android:radius="5dp"/>

        <gradient
            android:endColor="@color/orange"
            android:centerColor="@color/less_transparent_orange"
            android:startColor="@color/more_transparent_orange"
            android:type="linear"/>

        <stroke
            android:width="1dp"
            android:color="#80ffffff" />

    </shape>
</item>
</selector>