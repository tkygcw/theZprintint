<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    android:id="@+id/driver_dialog_list_view_item_parent_layout"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AhBen Studio Sdn Bhd"
        android:gravity="center|start"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/customer_dialog_list_view_item_name"
        android:textColor="@color/grey"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="29, Jalan Tasek 21"
        android:gravity="center|start"
        android:layout_below="@id/customer_dialog_list_view_item_name"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/customer_dialog_list_view_item_address"
        android:textColor="@color/grey"
        android:textSize="12sp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/edit"
        android:id="@+id/edit"
        android:padding="15dp"
        android:layout_alignParentEnd="true"
        android:contentDescription="TODO" />

</RelativeLayout>
